<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pay_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/pay_box"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제 실패"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:fontFamily="@font/pretendardbold"
        app:layout_constraintTop_toTopOf="@id/pay_box"
        app:layout_constraintLeft_toLeftOf="@id/pay_box"
        app:layout_constraintRight_toRightOf="@+id/pay_box"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잔액이 부족합니다."
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@id/pay_box"
        app:layout_constraintRight_toRightOf="@id/pay_box"
        />


    <ImageView
        android:id="@+id/pay_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/pay_box"
        app:layout_constraintBottom_toBottomOf="@id/pay_box"
        android:background="@drawable/pay_cancle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="충전하기"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintLeft_toLeftOf="@id/pay_charge"
        app:layout_constraintRight_toRightOf="@id/pay_charge"
        app:layout_constraintTop_toTopOf="@id/pay_charge"
        app:layout_constraintBottom_toBottomOf="@id/pay_charge"
        />

    <ImageView
        android:id="@+id/pay_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/pay_box"
        app:layout_constraintBottom_toBottomOf="@id/pay_box"
        android:background="@drawable/pay_confirm"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintLeft_toLeftOf="@id/pay_confirm"
        app:layout_constraintRight_toRightOf="@id/pay_confirm"
        app:layout_constraintTop_toTopOf="@id/pay_confirm"
        app:layout_constraintBottom_toBottomOf="@id/pay_confirm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>